{
  "name": "EcoGoogle",
  "version": "2.1",
  "manifest_version": 2,
  "description": "Ecosia with Google",
  "homepage_url": "https://github.com/EmerickH/EcoGoogle/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "<all_urls>",
	"webRequest",
	"webRequestBlocking",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/search*", "https://*/search*"],
      "js": ["src/inject/inject.js"],
      "all_frames": true
    },
	{
      "matches": ["https://*.ecosia.org/*"],
      "js": ["src/inject/tree.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "web_accessible_resources": ["ecosia.png"]
}
