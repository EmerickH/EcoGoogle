{
  "name": "EcoGoogle",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Ecosia with Google",
  "homepage_url": "https://github.com/EmerickH/EcoGoogle/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://*.google.com/* ",
	"https://*.google.fr/* ",
	"https://*.ecosia.org/* ",
	"webRequest",
	"webRequestBlocking",
	"\u003Call_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.google.com/search*", "https://*.google.fr/search*"],
      "js": ["src/inject/inject.js"],
      "all_frames": true
    },
	{
      "matches": ["https://*.ecosia.org/search*"],
      "js": ["src/inject/tree.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["ecosia.png"]
}